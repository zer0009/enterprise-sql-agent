# Universal SQL Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (postgresql, mysql, sqlite, sqlserver, oracle, mongodb)
DATABASE_TYPE=postgresql

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_PORT=5432
POSTGRES_URL=postgresql://postgres:123456@localhost:5432/Live_bilady

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=your_database_name
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# SQL Server Configuration
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DB=your_database_name
SQLSERVER_USER=your_username
SQLSERVER_PASSWORD=your_password

# Oracle Configuration
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SID=your_sid
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=your_database_name
MONGODB_USER=your_username
MONGODB_PASSWORD=your_password

# SQLite Configuration (file path)
SQLITE_PATH=./database.db

# =============================================================================
# LANGUAGE MODEL CONFIGURATION
# =============================================================================

# Google Gemini (Recommended)
GOOGLE_API_KEY=your_google_api_key_here
LLM_MODEL=gemini-2.0-flash

# OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent behavior settings
MAX_QUERY_RETRIES=3
QUERY_TIMEOUT=90
ENABLE_SEMANTIC_TABLE_SELECTION=true
ENABLE_QUERY_VALIDATION=true
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=./logs/agent.log

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Vector store for semantic table selection
VECTOR_STORE_PATH=./vector_store_data

# Cache settings
ENABLE_CACHING=true
CACHE_TTL=3600

# Security settings
ALLOWED_QUERY_TYPES=SELECT
BLOCKED_KEYWORDS=DROP,DELETE,TRUNCATE,ALTER,CREATE,INSERT,UPDATE
